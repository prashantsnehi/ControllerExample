@model ICollection<Person>
@{
    Layout = null;
    string baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
}

<link href="@(baseUrl + "/lib/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet" />    

<div class="row d-flex justify-content-center align-content-center">
    <div class="col-md-12">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Persons Id</th>
                    <th>Person Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td style="font-size: 30px;"><i class="bi bi-person-arms-up"></i></td>
                        <td>@person.PersonId</td>
                        <td>@person.PersonName</td>
                        <td>@person.Email</td>
                        <td>@person.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>