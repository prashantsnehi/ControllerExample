@{

}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h1>Update Countries</h1>
                    <p class="lead">Upload an Excel file to update the list of countries.</p>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="UpdateCountries" method="post"
                        enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="file">Upload CSV File:</label>
                            <input type="file" class="form-control" id="file" name="file" accept=".xlsx" required />
                        </div>
                        <div class="text-danger">@ViewBag.ErrorMessage</div>
                        <div class="text-success">@ViewBag.SuccessMessage</div>
                        <button type="submit" class="btn btn-primary mt-4">Upload</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h1>Updated Countries</h1>
                    <p class="lead">Countries updated from the excel file will be displayed here.</p>
                    </p>
                </div>
                <div class="card-body">
                    @if (ViewBag.Countries != null)
                    {
                        <h3 class="mt-4">Countries</h3>
                        <ul class="list-group">
                            @foreach (var country in ViewBag.Countries)
                            {
                                <li class="list-group-item">
                                    @country
                                </li>
                            }
                        </ul>
                    }
                    else if (ViewBag.Countries != null)
                    {
                        <div class="alert alert-warning mt-3">
                            No countries found in the uploaded file.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-3">
                            Please upload a file to see the list of countries.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>